<%= error_messages_for @object %>

<%= form_for(@object) do |f| %>
  <div class = "field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class = "field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>
  <div class = "field">
    <%= f.label :city %><br />
    <%= f.text_field :city %>
  </div>
  <div class = "field">
    <%= f.label :country %><br />
    <%= f.text_field :country %>
  </div>
  <div class = "field">
    <%= f.label :postcode %><br />
    <%= f.text_field :postcode %>
  </div>
  <div class = "field">
    <%= f.label :tel %><br />
    <%= f.text_field :tel %>
  </div>
  <div class = "field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <br />
  <%= f.submit %>
<% end %>