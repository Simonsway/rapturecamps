<h1>Rapturecamps Arrivals and Departures</h1>

<h2>Arrivals</h2>
<table border="1" cellspacing="9" cellpadding="3">
<tr>	
	<th>Customer ID</th>
	<th>Customer Name</th>
	<th>Room</td>
	<th>Info</td>
	<th>Arriving</td>
	<th>Pickup</td>
	<th>Flight</td>
	<th>Edit</td>
	<th>Delete</td>

<% @bookings_arrival.each do |booking| %>
<tr>
	<td><%= booking.customer_id %></td>
	<td><%= booking.customer_name %></td>
	<td><%= booking.room %></td>
	<td><%= booking.text %></td>
	<td><%= booking.arrival %></td>
	<td><%= booking.pickup %></td>
	<td><%= booking.flight %></td>
	<td><%= link_to 'Edit', edit_booking_path(booking) %></td>
	<td><%= link_to 'Delete', booking, :confirm => 'Are you sure?', :method => :delete %></td>
</tr>

<% end %>
</table>
<br />
<hr />

<h2>Departures</h2>

<table border="1" cellspacing="9" cellpadding="3">
<tr>	
	<th>Customer ID</th>
	<th>Customer Name</th>
	<th>Room</td>
	<th>Info</td>
	<th>Departure</td>
	<th>Pickup</td>
	<th>Flight</td>
	<th>Edit</td>
	<th>Delete</td>

<% @bookings_departure.each do |booking| %>
<tr>
	<td><%= booking.customer_id %></td>
	<td><%= booking.customer_name %></td>
	<td><%= booking.room %></td>
	<td><%= booking.text %></td>
	<td><%= booking.departure %></td>
	<td><%= booking.pickup %></td>
	<td><%= booking.flight %></td>
	<td><%= link_to 'Edit', edit_booking_path(booking) %></td>
	<td><%= link_to 'Delete', booking, :confirm => 'Are you sure?', :method => :delete %></td>
</tr>

<% end %>
</table>


<%= form_for @booking do |f| %>

	<div class = "field">
		<%= f.label :arrival %><br />
		<%= f.range_field :arrival %>
	</div>
	<div class = "field">
		<%= f.label :departure %><br />
		<%= f.range_field :departure %>
	</div>

<%= f.submit %>

<% end %>


<br />

