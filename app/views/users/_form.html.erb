<%= error_messages_for @user %>

<% @user.password = @user.password_confirmation = "" %>

<%= form_for(@user) do |f| %>
  <div class = "field">
    <%= f.label :login %><br />
    <%= f.text_field :login %>
  </div>
  <div class = "field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class = "field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class = "field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class = "field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <br />
  <%= f.submit %>
<% end %>